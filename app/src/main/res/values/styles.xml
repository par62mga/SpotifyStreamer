<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
    </style>

    <!-- Style for artist list view -->
    <style name="ArtistListStyle">
        <!-- Here it's a stub.  In screens of sufficient width, this style includes modifications
        for two-pane layout -->
    </style>

    <style name="PlayTracksTheme" parent="AppTheme">
    </style>

    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <style name="TextTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/app_text_title</item>
    </style>

    <style name="TextSubtitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/app_text_subtitle</item>
    </style>

    <style name="TextListStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/app_text_list</item>
    </style>

    <style name="TextSmallStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/app_text_small</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@color/app_primary</item>
    </style>

</resources>
